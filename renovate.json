{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "schedule:weekly"
  ],
  "labels": [
    "dependencies",
    "automated"
  ],
  "assignees": [
    "mekayelanik"
  ],
  "reviewers": [
    "mekayelanik"
  ],
  "timezone": "Asia/Dhaka",
  "schedule": [
    "before 6am on monday"
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5,
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "description": "Automerge minor and patch updates for stable packages",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Security-related packages - high priority",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "security-actions",
      "prPriority": 10,
      "labels": [
        "dependencies",
        "github-actions",
        "security",
        "priority"
      ],
      "matchPackageNames": [
        "/^aquasecurity//",
        "/^securego//",
        "/^github/codeql/"
      ]
    },
    {
      "description": "Core GitHub Actions (checkout, setup, upload/download)",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-core-actions",
      "prPriority": 5,
      "labels": [
        "dependencies",
        "github-actions"
      ],
      "matchPackageNames": [
        "/^actions//"
      ]
    },
    {
      "description": "Docker ecosystem actions",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "docker-actions",
      "prPriority": 3,
      "labels": [
        "dependencies",
        "github-actions",
        "docker"
      ],
      "matchPackageNames": [
        "/^docker//"
      ]
    },
    {
      "description": "All other GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "other-github-actions",
      "prPriority": 1,
      "labels": [
        "dependencies",
        "github-actions"
      ],
      "matchPackageNames": [
        "!/^actions//",
        "!/^docker//",
        "!/^aquasecurity//",
        "!/^securego//",
        "!/^github/codeql/"
      ]
    }
  ],
  "commitMessagePrefix": "ci: ",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "gitIgnoredAuthors": [
    "renovate[bot]@users.noreply.github.com"
  ]
}
